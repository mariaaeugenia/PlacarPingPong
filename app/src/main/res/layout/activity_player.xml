<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayerActivity">

    <TextView
            android:text="@string/textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" tools:text="PingPongX"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"/>
    <View
            style="@style/divider"
            android:layout_width="0dp"
            android:id="@+id/view" android:background="@color/colorDivider"
            app:layout_constraintEnd_toEndOf="@+id/titleTextView"
            app:layout_constraintStart_toStartOf="@+id/titleTextView"
            app:layout_constraintHorizontal_bias="0.401" app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/vai_come_ar_a_partida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/titleTextView" app:layout_constraintEnd_toEndOf="@+id/titleTextView"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <TextView
            android:text="@string/preencha_abaixo_o_nome_dos_jogadores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/secondSubtitleTextView" app:layout_constraintStart_toStartOf="@+id/subtitleTextView"
            app:layout_constraintEnd_toEndOf="@+id/subtitleTextView" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/subtitleTextView"/>
    <EditText
            style="@style/home_edittext"
            android:background="@drawable/home_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Jogador 1"
            android:layout_marginTop="70dp" app:layout_constraintTop_toBottomOf="@+id/secondSubtitleTextView"
            app:layout_constraintStart_toStartOf="@+id/secondSubtitleTextView"
            app:layout_constraintEnd_toEndOf="@+id/secondSubtitleTextView" android:autofillHints=""/>
    <EditText
            style="@style/home_edittext"
            android:background="@drawable/away_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/editText2" android:hint="Jogador 2"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>